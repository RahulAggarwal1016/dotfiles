# Easier navigation
alias ..='cd ..'
alias ~='cd ~'
alias d='cd ~/Desktop'
alias htn='cd ~/Desktop/Hack_the_North/hackerapi.com-v3/'
alias dl='cd ~/Downloads'
alias cfg="cd ~/.config"
alias c="clear"

# School
alias uw='dssh -Y r28aggar@linux.student.cs.uwaterloo.ca'
alias cpl='g++ --std=c++17 -o'
alias leak='valgrind --leak-check=full --track-origins=yes --show-leak-kinds=all'

# Dot aliases
alias dot='/usr/bin/git --git-dir=$HOME/dotfiles/ --work-tree=$HOME'
alias dp='dot push origin master'
alias ds='dot status'
alias dd='dot diff | bat'
alias dca='dot add -u & dot commit -a'

alias tls="tmux ls"
alias tk="tmux kill-session -t"

# Faire
alias dekp='./tools/hooks/manage-git-hooks push'
alias dekc='./tools/hooks/manage-git-hooks commit'
alias fstart='cd ~/Desktop/Faire/backend/docker/compose/dependencies/ && brew services start mysql@5.7 && docker-compose up -d && cd ../../../'
alias f='cd ~/Desktop/Faire/backend'

# Shortcuts 
alias ls='lsd'
alias la='ls -al'
alias al='nvim ~/.config/zsh/aliases'
alias ncfg="cd ~/.config/nvim/ && nvim"
alias zrc='nvim ~/.config/zsh/.zshrc'
alias rnm='rm -rf node_modules/ && npm install'
alias gbls='brew list && npm list -g --depth 0'
alias xcode='open -a Xcode'

# git
alias g='git'
alias gaa='git add -A ':!package-lock.json''
alias gb='git branch'
alias gc='git checkout'
alias gca='gaa && git commit'
alias gcb='git checkout -b'
alias gcf='git config --list'
alias gcl='git clone'
alias gclean='git clean -fd'
alias gcp='git cherry-pick'
alias gd='git diff -- ':!package-lock.json' ':!yarn.lock' | bat'
alias gdel='git branch -D'
alias gf='git fetch'
alias gpl='git pull origin'
alias gp='git push origin'
alias glg='tig'
alias gm='git merge'
alias gr='git remote'
alias gra='git remote add origin'
alias grb='git rebase'
alias grset='git remote set-url'
alias gs='git status'
alias gst='git stash'
alias gstc='git stash clear'
alias undo='git reset --soft HEAD~1'

alias src='exec zsh' 
alias paths='echo -e ${PATH//:/\\n}'

# colorize grep output (good for log files)
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# confirm before overwriting something
alias cp='cp -i'
alias mv='mv -i'

# safely delete
alias rm='() { trash $@ && ls }'

# update Homebrew, npm, and their installed packages
alias update='brew update; brew upgrade; brew cleanup; npm install npm -g; npm update -g;'

# Show/hide hidden files in Finder
alias show='defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder'
alias hide='defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder'

# easier to read disk
alias df='df -h'     # human-readable sizes
alias free='free -m' # show sizes in MB

# get top process eating memory
alias psmem='ps auxf | sort -nr -k 4 | head -5'

# get top process eating cpu ##
alias pscpu='ps auxf | sort -nr -k 3 | head -5'
